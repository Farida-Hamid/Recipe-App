<div class="public-page">
<h1>Public Recipes</h1>
<ul class="recpie_container">
  <% @public_recipes.each_with_index do |recipe, i| %>
    <li>
      <div>
        <h2>
          <%= link_to recipe.name, recipes_detail_path(id: recipe.id) %>
        </h2>
        <p>By: <%= recipe.user.name %></p>
      </div>
      <div>
        <p>Total food items: <%= recipe.recipe_foods.count %></p>
        <p>Total price: <%= @total_price[i] %></p>
      </div>
    </li>
   <% end %>
</ul>
</div>