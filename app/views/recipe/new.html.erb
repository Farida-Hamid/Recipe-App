<div>
  <%= form_with model: @new_recipe, url: recipe_create_path, method: :post, local: true, scope: :new_recipe do |f| %>
      <div>
      <%= f.label :name %><br>
      <%= f.text_field :name%>
      </div>

      <div>
      <%= f.label :preparation_time %> in hours<br>
      <%= f.number_field  :preparation_time%>
      </div>

      <div>
      <%= f.label :cooking_time %> in hours<br>
      <%= f.number_field :cooking_time%>
      </div>

      <div>
      <%= f.label :description %><br>
      <%= f.text_area :description%>
      </div>

      <div>
    <%= f.check_box :public %>
    <%= f.label :pet_dog, "public" %>
    </div>

    <%= f.submit "Add Recipe"%>
  <% end %>
