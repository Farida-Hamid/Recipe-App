<div>
  <%= form_with model: @new_recipe, url: recipe_create_path, method: :post, local: true, scope: :new_recipe do |f| %>
    <div>
    <%= f.label :name %><br>
    <%= f.text_field :name, class:"field"%>
    </div>

    <div>
    <%= f.label :preparation_time %> in hours<br>
    <%= f.number_field  :preparation_time, class:"field"%>
    </div>

    <div>
    <%= f.label :cooking_time %> in hours<br>
    <%= f.number_field :cooking_time, class:"field"%>
    </div>

    <div>
    <%= f.label :description %><br>
    <%= f.text_area :description, class:"field"%>
    </div>

    <div>
    <%= f.check_box :public %>
    <%= f.label :pet_dog, "Public" %>
    </div>

    <%= f.submit "Add Recipe", class: "button"%>
  <% end %>
<div>
