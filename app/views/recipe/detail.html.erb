<div>
  <h1>Recipe: <%= @recipe.name%></h1>
  <h3>Preparation time: <%= @recipe.preparation_time%> hours</h3>
  <h3>Cooking time: <%= @recipe.cooking_time%> hours</h3>
  <h3>Steps:</h3>
  <%= @recipe.description%>
  <% if @recipe.public %>
    <button class="status public">Public</button>
  <% else %>
    <button class="status private">Private</button>
  <% end %>

  <%= link_to "Generate shopping list", recipe_detail_path(current_user.id), class: "button", method: :get %>
  <%= link_to "Add ingredient", recipe_add_ingredient_path(@recipe.id), class: "button", method: :get %>

  <div>
    <table>
      <thead>
        <tr>
          <th scope="col">Food</th>
          <th scope="col">Quantity</th>
          <th scope="col">Value</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @recipe_foods.each do |recipe_food| %>
          <tr>
            <td><%= recipe_food.foods.name%></td>
            <td><%= recipe_food.quantity %></td>
            <td><%= recipe_food.foods.price%>$</td>
            <td>
              <%= link_to "Modify", recipe_detail_path(id: recipe_food.id), method: :delete %>
              <%= link_to "Remove", recipe_detail_path(id: recipe_food.id), method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>